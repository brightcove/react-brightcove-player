{
  "name": "@brightcove/react-player-loader",
  "version": "1.1.2",
  "description": "The official react component for the Brightcove Player",
  "main": "dist/brightcove-react-player-loader.cjs.js",
  "module": "dist/brightcove-react-player-loader.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/brightcove/react-player-loader.git"
  },
  "generator-videojs-plugin": {
    "version": "7.4.0"
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "keywords": [
    "audio",
    "brightcove",
    "media",
    "player",
    "react",
    "react-component",
    "video"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all -p build:*",
    "build:js": "rollup -c scripts/rollup.config.js",
    "clean": "shx rm -rf ./dist ./test/dist",
    "postclean": "shx mkdir -p ./dist ./test/dist",
    "docs": "npm-run-all docs:*",
    "docs:api": "jsdoc src -g plugins/markdown -r -d docs/api",
    "docs:toc": "doctoc README.md",
    "lint": "vjsstandard",
    "server": "karma start scripts/karma.conf.js --singleRun=false --auto-watch",
    "start": "npm-run-all -p server watch",
    "pretest": "npm-run-all lint build",
    "test": "npm-run-all test:*",
    "posttest": "shx cat test/dist/coverage/text.txt",
    "test:unit": "karma start scripts/karma.conf.js",
    "test:verify": "vjsverify --verbose",
    "update-changelog": "conventional-changelog -p videojs -i CHANGELOG.md -s",
    "preversion": "npm test",
    "version": "is-prerelease || npm run update-changelog && git add CHANGELOG.md",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "npm run build:js -- -w",
    "prepublishOnly": "npm-run-all build test:verify"
  },
  "author": "Brightcove, Inc.",
  "license": "Apache-2.0",
  "vjsstandard": {
    "ignore": [
      "dist",
      "docs",
      "test/dist",
      "vendor"
    ]
  },
  "files": [
    "CONTRIBUTING.md",
    "dist/",
    "docs/",
    "index.html",
    "scripts/",
    "src/",
    "test/"
  ],
  "dependencies": {},
  "devDependencies": {
    "@brightcove/player-loader": "^1.6.0",
    "conventional-changelog-cli": "^2.0.11",
    "conventional-changelog-videojs": "^3.0.0",
    "doctoc": "^1.4.0",
    "husky": "^1.2.0",
    "in-publish": "^2.0.0",
    "jsdoc": "https://github.com/BrandonOCasey/jsdoc#feat/plugin-from-cli",
    "karma": "^3.1.3",
    "lint-staged": "^8.1.0",
    "not-prerelease": "^1.0.1",
    "npm-merge-driver-install": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "pkg-ok": "^2.3.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rollup": "^0.67.4",
    "shx": "^0.3.2",
    "videojs-generate-karma-config": "^5.0.0",
    "videojs-generate-rollup-config": "^2.3.1",
    "videojs-generator-verify": "~1.2.0",
    "videojs-standard": "^8.0.2"
  },
  "peerDependencies": {
    "react": ">=15.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "vjsstandard --fix",
      "git add"
    ],
    "README.md": [
      "npm run docs:toc",
      "git add"
    ]
  }
}
